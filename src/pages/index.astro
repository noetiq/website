---
import Layout from '~/layouts/PageLayout.astro'

import Hero from '~/components/widgets/Hero.astro'
import CallToAction from '~/components/widgets/CallToAction.astro'

const metadata = {
  title: 'Noetiq Research',
  ignoreTitleTemplate: true,
}
---

<Layout metadata={metadata}>
  <Hero>
    <Fragment slot="title"> Driving breakthroughs in research </Fragment>
    <Fragment slot="subtitle"> Transforming research into market-ready products and services </Fragment>
  </Hero>

  <CallToAction
    title="Coming soon"
    subtitle="We are working on the content of these demo pages. You will see them very soon. Stay tuned Stay tuned!"
    actions={[
      {
        variant: 'primary',
        text: 'Download Template',
        href: 'https://github.com/onwidget/astrowind',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>
