---
const links = [
  { text: 'About', href: '/about' },
  { text: 'Solutions', href: '/solutions' },
  { text: 'Research Blog', href: '/blog' },
  { text: 'Contact Us', href: '/contact' },
]

const socialLinks = [
  { text: 'Twitter', href: 'https://twitter.com/noetiq', icon: 'mdi:twitter' },
  { text: 'LinkedIn', href: 'https://linkedin.com/company/noetiq', icon: 'mdi:linkedin' },
  { text: 'GitHub', href: 'https://github.com/noetiq', icon: 'mdi:github' },
]

const year = new Date().getFullYear()
---

<footer class="bg-[#4B3832] py-6 text-[#F5EFE6]">
  <div class="container mx-auto text-center px-6">
    <p class="text-lg">&copy; {year} Noetiq Research. All rights reserved.</p>
    <nav class="mt-4">
      {
        links.map(({ text, href }) => (
          <a href={href} class="mx-4 text-[#EFE3D7] hover:underline">
            {text}
          </a>
        ))
      }
    </nav>
    <div class="mt-4 flex justify-center space-x-4">
      {
        socialLinks.map(({ text, href, icon }) => (
          <a href={href} class="text-[#EFE3D7] hover:underline flex items-center space-x-2">
            <span class="iconify" data-icon={icon} />
            <span>{text}</span>
          </a>
        ))
      }
    </div>
  </div>
</footer>
